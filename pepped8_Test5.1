text = input('Введите текст: ')
length = len(text)

if length < 2:
    measure = "Чудовищно мало"
elif length < 5:
    measure = "Очень мало"
elif length < 10:
    measure = "Мало"
elif length < 30:
    measure = "Ок"
elif length < 100:
    measure = "Много"
else:
    measure = "Чудовищно много"

print(measure)

